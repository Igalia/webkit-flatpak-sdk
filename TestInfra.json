{
    "name": "httpd",
    "sources": [
        {
            "type": "git",
            "url": "https://github.com/apache/httpd.git",
            "tag": "2.4.37",
            "commit": "6431bbb0da47dd984110dc32728a84e5cc990313"
        },
        {
            "type": "file",
            "path": "files/httpd-autogen.sh",
            "dest-filename": "autogen.sh"
        },
        {
            "type": "patch",
            "path": "patches/httpd-0001-configure-use-pkg-config-for-PCRE-detection.patch"
        }
    ],
    "config-opts": [
        "--enable-mpms-shared=all",
        "--enable-modules=all",
        "--with-apr=/usr/bin/apr-1-config",
        "--with-apr-util=/usr/bin/apu-1-config",
        "--with-pcre=/usr",
        "--enable-authnz-fcgi",
        "--enable-cgi",
        "--enable-cgid"
    ]
},
{
    "name": "php",
    "sources": [
        {
            "type": "archive",
            "url": "https://php.net/distributions/php-7.2.6.tar.xz",
            "sha512": "da86b1ff2df3b9e2d46e59a80296b940d81132975b621bdec9602f8b4c8d91a3fdcd4ffd7cb982d63d3ec974b3a12a7854e42a73b7f2cc8eefade14335aa7c71"
        }
    ],
    "config-opts": [
        "--disable-xml",
        "--disable-dom",
        "--disable-libxml",
        "--disable-simplexml",
        "--disable-xmlreader",
        "--disable-xmlwriter",
        "--without-pear",
        "--with-apxs2",
        "--with-zlib",
        "--with-libzip",
        "--enable-sockets=shared"
    ]
},
